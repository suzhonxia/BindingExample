<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="viewModel"
            type="com.sun.binding.model.educ.EducViewModel" />

        <variable
            name="adapter"
            type="androidx.recyclerview.widget.RecyclerView.Adapter" />

        <variable
            name="itemDecoration"
            type="androidx.recyclerview.widget.RecyclerView.ItemDecoration" />
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_46"
            android:background="@color/app_white"
            android:gravity="center"
            android:text="@string/educ_tab"
            android:textColor="@color/app_text_color_black_light"
            android:textSize="@dimen/sp_18" />

        <com.sun.binding.widget.state.StatefulLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:bind_sfl_mode="@{com.sun.binding.widget.state.StateMode.common}"
            android:bind_sfl_retry="@{viewModel.retry}"
            android:bind_sfl_state="@{viewModel.viewState}">

            <com.scwang.smartrefresh.layout.SmartRefreshLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:bind_smart_loadMore_enable="@{false}"
                android:bind_smart_onRefresh="@{viewModel.onRefresh}"
                android:bind_smart_refresh_enable="@{true}"
                android:bind_smart_refreshing="@={viewModel.refreshing}"
                app:srlEnableOverScrollDrag="true">

                <androidx.recyclerview.widget.RecyclerView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:bind_rv_adapter="@{adapter}"
                    android:bind_rv_item_decoration="@{itemDecoration}"
                    app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager" />
            </com.scwang.smartrefresh.layout.SmartRefreshLayout>
        </com.sun.binding.widget.state.StatefulLayout>
    </LinearLayout>
</layout>