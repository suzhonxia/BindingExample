<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="viewModel"
            type="com.sun.binding.model.home.HomeViewModel" />
    </data>

    <androidx.cardview.widget.CardView
        android:id="@+id/assetPercentLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginTop="4dp"
        android:layout_marginEnd="10dp"
        android:bind_visibility="@{viewModel.homeData.newcourse != null &amp;&amp; viewModel.homeData.newcourse.type != 0}"
        app:cardCornerRadius="5dp"
        app:cardUseCompatPadding="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/assetCompleteLayout"
                android:layout_width="match_parent"
                android:layout_height="64dp"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingStart="6dp"
                android:paddingEnd="6dp">

                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:src="@drawable/home_icon_complete"
                    tools:ignore="ContentDescription" />

                <TextView
                    android:id="@+id/tvAssetComplete"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="12dp"
                    android:layout_weight="1"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:singleLine="true"
                    android:textColor="@color/app_text_color_black"
                    android:textSize="14sp"
                    tools:text="已完成（80个课程）" />

                <com.sun.binding.widget.HomePercentView
                    android:id="@+id/percentComplete"
                    android:layout_width="120dp"
                    android:layout_height="wrap_content" />
            </LinearLayout>

            <View style="@style/app_dividing.horizontal" />

            <LinearLayout
                android:id="@+id/assetOpenLayout"
                android:layout_width="match_parent"
                android:layout_height="64dp"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingStart="6dp"
                android:paddingEnd="6dp">

                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:src="@drawable/home_icon_open"
                    tools:ignore="ContentDescription" />

                <TextView
                    android:id="@+id/tvAssetOpen"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="12dp"
                    android:layout_weight="1"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:singleLine="true"
                    android:textColor="@color/app_text_color_black"
                    android:textSize="14sp"
                    tools:text="可完成（200个课程型）" />

                <com.sun.binding.widget.HomePercentView
                    android:id="@+id/percentOpen"
                    android:layout_width="120dp"
                    android:layout_height="wrap_content" />
            </LinearLayout>
        </LinearLayout>
    </androidx.cardview.widget.CardView>
</layout>