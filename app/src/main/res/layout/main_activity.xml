<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".ui.main.MainActivity">

    <data>

        <variable
            name="viewModel"
            type="com.sun.binding.model.main.MainViewModel" />
    </data>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <com.sun.binding.widget.CustomViewPager
            android:id="@+id/cvpMain"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="50dp"
            android:bind_vp_currentItem="@{viewModel.currentItem}"
            android:bind_vp_offscreenPageLimit="@{5}"
            android:bind_vp_smoothScroll="@{false}"
            app:scrollable="false" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true">

            <com.ittianyu.bottomnavigationviewex.BottomNavigationViewEx
                android:id="@+id/bnvMain"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@color/app_white"
                android:bind_bnv_enable_animation="@{false}"

                android:bind_bnv_icon_size="@{23}"
                android:bind_bnv_item_selected_listener="@{viewModel.itemSelectedListener}"
                android:bind_bnv_text_size="@{11}"
                app:itemTextColor="@color/main_tab_selector_color"
                app:menu="@menu/main_tab_menu" />
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="8dp"
            android:layout_alignBottom="@id/cvpMain"
            android:background="@drawable/app_top_shadow" />

        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="8dp"
            android:bind_onClick="@{viewModel.onSubmitTabClick}"
            android:src="@drawable/main_tab_submit"
            tools:ignore="ContentDescription" />
    </RelativeLayout>
</layout>