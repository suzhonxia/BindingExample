<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/dp_2"
    android:background="@color/app_white"
    app:cardCornerRadius="@dimen/dp_5"
    app:cardElevation="@dimen/dp_2">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/dp_15">

        <com.makeramen.roundedimageview.RoundedImageView
            android:id="@+id/ivNewsCover"
            android:layout_width="@dimen/dp_95"
            android:layout_height="@dimen/dp_95"
            android:scaleType="centerCrop"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:riv_corner_radius="@dimen/dp_5" />

        <TextView
            android:id="@+id/tvNewsTitle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dp_15"
            android:ellipsize="end"
            android:lineSpacingMultiplier="1.2"
            android:maxLines="3"
            android:textColor="@color/app_text_color_black_light"
            android:textSize="@dimen/sp_15"
            app:layout_constraintLeft_toRightOf="@id/ivNewsCover"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="首页新闻标题首页新闻标题首页新闻标题首页新闻标题首页新闻标题首页新闻标题" />

        <TextView
            android:id="@+id/tvNewsDate"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dp_12"
            android:drawableStart="@drawable/app_icon_date"
            android:drawablePadding="@dimen/dp_2"
            android:ellipsize="end"
            android:maxLines="1"
            android:singleLine="true"
            android:textColor="@color/app_text_color_gray_light"
            android:textSize="@dimen/sp_13"
            app:layout_constraintBottom_toBottomOf="@id/ivNewsCover"
            app:layout_constraintLeft_toRightOf="@id/ivNewsCover"
            app:layout_constraintRight_toRightOf="@id/tvNewsNum"
            tools:text="2019-09-16" />

        <TextView
            android:id="@+id/tvNewsNum"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableStart="@drawable/app_icon_read"
            android:drawablePadding="@dimen/dp_2"
            android:gravity="center"
            android:textColor="@color/app_text_color_gray_light"
            android:textSize="@dimen/sp_13"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            tools:text="120" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>