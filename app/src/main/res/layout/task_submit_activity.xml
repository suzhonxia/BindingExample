<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <import type="android.view.View" />

        <variable
            name="viewModel"
            type="com.sun.binding.model.course.TaskSubmitViewModel" />

        <variable
            name="adapter"
            type="androidx.recyclerview.widget.RecyclerView.Adapter" />

        <variable
            name="itemDecoration"
            type="androidx.recyclerview.widget.RecyclerView.ItemDecoration" />

        <variable
            name="photoPlayClick"
            type="android.view.View.OnClickListener" />

        <variable
            name="videoPlayClick"
            type="android.view.View.OnClickListener" />
    </data>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <com.hjq.bar.TitleBar
            android:id="@+id/titleBar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:rightColor="@color/app_text_color_black_light"
            app:rightTitle="发布"
            app:title="上传作品" />

        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@id/titleBar"
            android:background="@color/app_white"
            android:scrollbars="none">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:orientation="vertical"
                android:padding="@dimen/dp_15">

                <TextView
                    style="@style/app_label.bold"
                    android:text="作品描述"
                    tools:ignore="HardcodedText" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_150"
                    android:layout_marginTop="@dimen/dp_15"
                    android:background="@drawable/app_shape_gray_bg"
                    android:orientation="vertical"
                    android:padding="@dimen/dp_12">

                    <EditText
                        android:id="@+id/etIntro"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:background="@null"
                        android:gravity="start"
                        android:hint="描述一下你的心得体会吧~"
                        android:inputType="textMultiLine"
                        android:lineSpacingMultiplier="1.2"
                        android:maxLength="@{viewModel.taskSubmitConfig.introMaxSize}"
                        android:textColor="@color/app_text_color_black_light"
                        android:textColorHint="@color/app_text_color_gray_light"
                        android:textSize="@dimen/sp_15"
                        tools:ignore="Autofill,HardcodedText" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="end"
                        android:layout_marginTop="@dimen/dp_12"
                        android:text="@{viewModel.taskSubmitConfig.introCounterLabel}"
                        android:textColor="@color/app_text_color_gray_light"
                        android:textSize="@dimen/sp_14" />
                </LinearLayout>

                <TextView
                    style="@style/app_label.bold"
                    android:layout_marginTop="@dimen/dp_15"
                    android:text="上传图片"
                    tools:ignore="HardcodedText" />

                <androidx.recyclerview.widget.RecyclerView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_15"
                    android:bind_rv_adapter="@{adapter}"
                    android:bind_rv_item_decoration="@{itemDecoration}"
                    app:layoutManager="androidx.recyclerview.widget.GridLayoutManager"
                    app:spanCount="3" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_15"
                    android:text="提示：\n1、单张图片不得超过50M;\n2、图片最多上传9张。"
                    android:textColor="@color/app_text_color_gray_light"
                    android:textSize="@dimen/sp_12"
                    tools:ignore="HardcodedText" />

                <TextView
                    style="@style/app_label.bold"
                    android:layout_marginTop="@dimen/dp_15"
                    android:text="上传视频"
                    tools:ignore="HardcodedText" />

                <FrameLayout
                    android:id="@+id/videoContainer"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_95"
                    android:layout_marginTop="@dimen/dp_15"
                    android:background="@drawable/course_layer_list_submit_video_bg">

                    <com.makeramen.roundedimageview.RoundedImageView
                        android:id="@+id/ivVideoCover"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:bind_iv_img_default="@{@color/app_transparent}"
                        android:bind_iv_img_url="@{viewModel.taskSubmitConfig.videoPath}"
                        android:scaleType="centerCrop"
                        app:riv_corner_radius="@dimen/dp_5" />

                    <ImageView
                        android:layout_width="@dimen/dp_20"
                        android:layout_height="@dimen/dp_20"
                        android:layout_gravity="end"
                        android:bind_visibility="@{viewModel.taskSubmitConfig.hasSelectedVideo}"
                        android:onClick="@{() -> viewModel.taskSubmitConfig.updateSelectVideo(``, ``)}"
                        android:scaleType="fitXY"
                        android:src="@drawable/course_icon_submit_del"
                        tools:ignore="ContentDescription" />

                    <ImageView
                        android:layout_width="@dimen/dp_38"
                        android:layout_height="@dimen/dp_38"
                        android:layout_gravity="center"
                        android:bind_visibility="@{viewModel.taskSubmitConfig.hasSelectedVideo}"
                        android:onClick="@{videoPlayClick}"
                        android:src="@drawable/app_icon_play"
                        tools:ignore="ContentDescription" />
                </FrameLayout>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_15"
                    android:text="提示：\n1、普通课程视频为选传，电动课程视频为必传;\n2、单个视频不得超过50M;\n3、视频最多只能上传1个。"
                    android:textColor="@color/app_text_color_gray_light"
                    android:textSize="@dimen/sp_12"
                    tools:ignore="HardcodedText" />
            </LinearLayout>
        </androidx.core.widget.NestedScrollView>
    </RelativeLayout>
</layout>