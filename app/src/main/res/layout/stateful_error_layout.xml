<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <Space
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />

    <ImageView
        android:id="@+id/ivError"
        android:layout_width="@dimen/dp_134"
        android:layout_height="@dimen/dp_134"
        android:layout_gravity="center_horizontal"
        android:src="@drawable/state_icon_error_net"
        tools:ignore="ContentDescription" />

    <TextView
        android:id="@+id/tvError"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/dp_16"
        android:textColor="@color/app_text_color_gray_light"
        android:textSize="@dimen/sp_16"
        tools:text="咦！怎么把网络搞丢了~" />

    <TextView
        android:id="@+id/tvAction"
        android:layout_width="@dimen/dp_120"
        android:layout_height="@dimen/dp_36"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/dp_30"
        android:background="@drawable/app_shape_positive_action_bg"
        android:gravity="center"
        android:textColor="@color/app_text_color_black_light"
        android:textSize="@dimen/sp_16"
        tools:text="重试" />

    <Space
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2" />
</merge>