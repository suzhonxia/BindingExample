<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="CustomViewPager">
        <attr name="scrollable" format="boolean" />
        <attr name="fixHeight" format="boolean" />
    </declare-styleable>

    <declare-styleable name="CustomItemView">
        <attr name="iconRes" format="reference" />
        <attr name="tipColor" format="color" />
        <attr name="tipText" format="string" />
        <attr name="labelText" format="string" />
        <attr name="showTip" format="boolean" />
        <attr name="showIcon" format="boolean" />
        <attr name="showLine" format="boolean" />
        <attr name="lineMargin" format="boolean" />
    </declare-styleable>

    <declare-styleable name="MarqueeView">
        <attr name="mvInterval" format="integer|reference"/>
        <attr name="mvAnimDuration" format="integer|reference"/>
        <attr name="mvTextSize" format="dimension|reference"/>
        <attr name="mvTextColor" format="color|reference"/>
        <attr name="mvSingleLine" format="boolean"/>
        <attr name="mvFont" format="reference"/>
        <attr name="mvGravity">
            <enum name="left" value="0"/>
            <enum name="center" value="1"/>
            <enum name="right" value="2"/>
        </attr>
        <attr name="mvDirection">
            <enum name="bottom_to_top" value="0"/>
            <enum name="top_to_bottom" value="1"/>
            <enum name="right_to_left" value="2"/>
            <enum name="left_to_right" value="3"/>
        </attr>
    </declare-styleable>

    <declare-styleable name="StatefulLayout">
        <attr name="sfl_loadingView" format="reference" />
        <attr name="sfl_emptyView" format="reference" />
        <attr name="sfl_errorView" format="reference" />
        <attr name="sfl_viewState" format="enum">
            <enum name="content" value="0" />
            <enum name="loading" value="1" />
            <enum name="empty" value="2" />
            <enum name="error" value="3" />
        </attr>
        <attr name="sfl_animateViewChanges" format="boolean" />
        <attr name="sfl_applyNormalView" format="boolean" />
    </declare-styleable>

    <declare-styleable name="MaxHeightLayout">
        <attr name="mhl_HeightRatio" format="reference|float" />
        <attr name="mhl_HeightDimen" format="reference|dimension" />
    </declare-styleable>
</resources>